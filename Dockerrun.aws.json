{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"mosabami/multi-docker-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image":"mosabami/multi-docker-server",
            "hostname":"api",
            "essential":false   
        },
        {
            "name":"worker",
            "image":"mosabami/multi-docker-worker",
            "hostname":"worker",
            "essential":false   
        },
        {
            "name":"nginx",
            "image":"mosabami/multi-docker-nginx",
            "essential":true, 
            "portMappings": [
                {
                    "hostPort":80, 
                    "containerPort":80 
                }
            ],
            "links":["client","server"]
        }
    ]
}